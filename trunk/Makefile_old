all: languages

clean:
	rm -f src/*.pyc

install:
	mkdir -p $(DESTDIR)/usr/share/vox-launcher
	mkdir -p $(DESTDIR)/usr/share/pixmaps
	mkdir -p $(DESTDIR)/etc/vox-launcher
	mkdir -p $(DESTDIR)/usr/share/applications
	mkdir -p $(DESTDIR)/usr/bin
	cp vox-launcher $(DESTDIR)/usr/bin
	cp -var src/*.py $(DESTDIR)/usr/share/vox-launcher
	cp -var desktop/icons $(DESTDIR)/usr/share/vox-launcher
	cp -var conf/* $(DESTDIR)/etc/vox-launcher/
	cp desktop/icons/vox-launcher.png  $(DESTDIR)/usr/share/pixmaps
	cp desktop/vox-launcher.desktop $(DESTDIR)/usr/share/applications

deb:
	fakeroot dpkg-buildpackage -us -uc

